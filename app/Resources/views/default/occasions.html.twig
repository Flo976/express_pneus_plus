 <section class="text-center bg--primary space--xs">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <h2>Nos Voitures d'Occasion</h3>
                        </div>
                        {% for th in theme|slice(0,3) %}
                        <div class="col-md-4">
                            {% for ph in th.medias|slice(0,1) %}
                            <div class="feature feature-1  bg--white"> <img style="max-height:300px;" alt="{{th.url}}" src="{{ph.large}}">
                            {% endfor %}    
                                <div class="feature__body boxed boxed--lg boxed--border">
                                    <h3>{{th.nom}} - {{th.soustitre}}</h3>
                                    <p class="lead"> {{th.description}} </p> <a class="btn" href="/voitures-occasion/{{th.url}}">
                            Voir
                        </a> </div>
                            </div>
                        </div>
                        {% endfor %}
                        
                    </div>
                </div>
            </section>